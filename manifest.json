{
  "name": "MoviesLens Netflix",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Easily spot movies that you can watch on Netflix",
  "homepage_url": "http://riccardomastellone.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["src/bg/background.js"],
    "persistent": true
  },
  "permissions": [
     "webNavigation"
  ],
  "web_accessible_resources": [
    "icons/netflix.png"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://movielens.org/*"
      ],
      "js": [
        "src/inject/inject.js",
        "js/jquery/jquery.min.js"
      ]
    }
  ]
}